{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "strictBindCallApply": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "target": "ES5",
    "lib": [
      "ES2016",
      "DOM"
    ]
  },
  "include": [
    "src",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}